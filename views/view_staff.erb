<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <title>Staff Tax Generator</title>
</head>

<body>
    <div>
        <div class="alert alert-primary" role="alert">
            <i class="fa fa-money" aria-hidden="true"></i> Welcome to Staff Tax Generator
        </div>
    </div>

    <div class="container justify-content-center align-items-center" style="height: 100px;">
        <div class="p-2">
            <h3>Full Info for <%= @name %></h3>
        </div>
        <div class="p-2">
            <div class="form-group row">
                ID: <b><%= @id %></b>
            </div>
            <div class="form-group row">
                Name: <b><%= @name %></b> 
            </div>
            <div class="form-group row">
                Tax: <b><%= @tax %></b> 
            </div>
            <div class="form-group row">
                Gross: <b><%= @gross %></b> 
            </div>
            <div class="form-group row">
                Latest Update: <b><%= @latest_update %></b>
            </div>
        </div>
        <div class="p-2">
            <a href="/staff/delete/<%= @id %>"><button type="button" class="btn btn-danger btn-lg btn-block">Delete Staff?</button></a>
            <a href="/staff/new"><button type="button" class="btn btn-primary btn-lg btn-block">Add Staff</button></a>
        </div>
        
        <div class="p-2">
            <form action="/staff/view/update" method="post">
                <div class="form-group row">
                    <label for="id" class="col-sm-2 col-form-label">ID</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" readonly name="id" value="<%= @id %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control"  name="name" value="<%= @name %>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="salary" class="col-sm-2 col-form-label">Salary</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="salary" value="<%= @salary %>">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                    </div>
                </div>
            </form>

        </div>

    </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>